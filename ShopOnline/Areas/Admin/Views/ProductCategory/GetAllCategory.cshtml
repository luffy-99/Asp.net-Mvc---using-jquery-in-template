@model List<ShopOnline.Areas.Admin.Models.ProductCategoryViewAdmin>
@{
    ViewBag.Title = "GetAllCategory";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div id="content-wrapper">

    <div class="container-fluid">

        <!-- DataTables Example -->
        <div class="card mb-3">
            <div class="card-header">
                <i class="fas fa-table"></i>
                Data Category
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Alias</th>
                                <th>Description</th>
                                <th>Created By</th>
                                <th>Created Date</th>
                                <th>Image</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ID</td>
                                    <td>@item.Name</td>
                                    <td>@item.Alias</td>
                                    <td>@item.Description</td>
                                    <td>@item.CreatedBy</td>
                                    <td class="CreatedDate">@item.CreatedDate</td>
                                    <td>@item.Image</td>
                                    <td><span class="badge badge-pill badge-success">@item.Status</span></td>
                                    <td>
                                        <button type="button" class="btn btn-success" style="font-size:5px"><a href="/Admin/User/AddUser"><i class="material-icons" style="font-size:15px">&#xe89c;</i></a></button>
                                        <button type="button" class="btn btn-warning" style="font-size:5px"><a href="/Admin/User/UpdateUser/@item.ID"><i class='far' style="font-size:15px">&#xf044;</i></a></button>
                                        <button type="button" class="btn btn-danger" style="font-size:5px"><a href="/Admin/User/DeleteUser/@item.ID"><i class="material-icons" style="font-size:15px">&#xe872;</i></a></button>
                                    </td>
                                </tr>

                            }
                        </tbody>

                    </table>


                </div>
            </div>
        </div>

    </div>

</div>


