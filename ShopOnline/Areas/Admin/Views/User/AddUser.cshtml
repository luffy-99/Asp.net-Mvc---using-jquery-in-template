@model ShopOnline.Areas.Admin.Models.UserViewAdmin
@{
    ViewBag.Title = "AddUser";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

    <div class="card mb-3 w-100">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Create User
        </div>
        <div class="card-body">
            @using (Html.BeginForm("AddUser", "User", FormMethod.Post))
            {
                <div class="form-group">
                    <label for="Name">Name</label>
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control w-50", @placeholder = "Enter Name", @id = "Name" })

                </div>
                <div class="form-group">
                    <label for="UserName">User Name</label>
                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control w-50", @placeholder = "Enter User Name", @id = "User Name" })
                </div>
                <div class="form-group">
                    <label for="Password">Password</label>
                    @Html.TextBoxFor(model => model.PassWord, new { @class = "form-control w-50", @placeholder = "Enter Password", @id = "Password" })
                </div>
                <div class="form-group">
                    <label for="Position">Position</label>
                    @Html.TextBoxFor(model => model.Position, new { @class = "form-control w-50", @placeholder = "Enter Position", @id = "Position" })
                </div>
                <button type="submit" class="btn btn-primary ">Submit</button>
            }
        </div>
    </div>

