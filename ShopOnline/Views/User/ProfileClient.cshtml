@model ShopOnline.Models.UserView
@{
    ViewBag.Title = "ProfileClient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<hr>
<div class="container bootstrap snippet">
    <div class="row">
        <div class="col-sm-10"><h1>@Model.UserName</h1></div>
        <div class="col-sm-2"><a href="/users" class="pull-right"></a></div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <!--left col-->


            <div class="text-center">
                <img src="http://ssl.gstatic.com/accounts/ui/avatar_2x.png" class="avatar img-circle img-thumbnail" alt="avatar">
                <h6>Upload a different photo...</h6>
                <input type="file" class="text-center center-block file-upload" />
            </div></hr><br>


            <div class="panel panel-default">
                <div class="panel-heading">Website <i class="fa fa-link fa-1x"></i></div>
                <div class="panel-body"><a href="http://bootnipets.com">bootnipets.com</a></div>
            </div>


            <ul class="list-group">
                <li class="list-group-item text-muted">Activity <i class="fa fa-dashboard fa-1x"></i></li>
                <li class="list-group-item text-right"><span class="pull-left"><strong>Order</strong></span> 125</li>
                <li class="list-group-item text-right"><span class="pull-left"><strong>Likes</strong></span> 13</li>
                <li class="list-group-item text-right"><span class="pull-left"><strong>Posts</strong></span> 37</li>
            </ul>

            <div class="panel panel-default">
                <div class="panel-heading">Social Media</div>
                <div class="panel-body">
                    <i class="fa fa-facebook fa-2x"></i> <i class="fa fa-github fa-2x"></i> <i class="fa fa-twitter fa-2x"></i> <i class="fa fa-pinterest fa-2x"></i> <i class="fa fa-google-plus fa-2x"></i>
                </div>
            </div>

        </div><!--/col-3-->
        <div class="col-sm-9">

            <div class="tab-pane active" id="home">
                <hr>
                @using (Html.BeginForm("Update", "Login", FormMethod.Post))
                {
                    <div class="form-group ">

                        <div class="col-xs-6 ">
                            <label for="first_name"><h4>Name</h4></label>
                           
                            @Html.TextBoxFor(x=>x.Name, new {@class="form-control" ,@id="name" ,@placeholder="name", @title="enter your first name if any."})
                        </div>
                    </div>


                    <div class="form-group">

                        <div class="col-xs-6">
                            <label for="last_name"><h4>User Name</h4></label>
                            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @id = "user_name", @placeholder = "user name", @title = "enter your last name if any." })

                        </div>
                    </div>

                    <br />

                    <div class="form-group">

                        <div class="col-xs-6">
                            <br />
                            <label for="password"><h4>Password</h4></label>
                            @Html.PasswordFor(x => x.PassWord, new { @class = "form-control", @id = "password", @placeholder = "password", @title = "enter your password." })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-xs-12">
                            <br>
                            <button class="btn btn-lg btn-success pull-right" type="submit">Save</button>
                        </div>
                    </div>
                }


                <hr>

            </div><!--/tab-pane-->
        </div><!--/tab-content-->

    </div><!--/col-9-->
</div><!--/row-->
