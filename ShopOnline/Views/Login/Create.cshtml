@model ShopOnline.Models.UserView
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="breadcrumb">
    <div class="container">
        <ul class="breadcrumb"></ul>
    </div>
</div>
<div class="container py-5">
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center mb-5"></h1>

            <div class="row">
                <div class="col-md-6 mx-auto">
                    <div class="card border-secondary">
                        <div class="card-header">
                            <h2 class="mb-0 my-2">Sign Up</h2>
                        </div>
                        <div class="card-body">
                            @using (Html.BeginForm("Create", "Login", FormMethod.Post))
                            {
                                <div class="form-group">
                                    <label for="inputName">Name</label>
                                    @Html.TextBoxFor(x=>x.Name, new { @class="form-control", @id="inputName" ,@placeholder="name"})
                                </div>
                                <div class="form-group">
                                    <label for="userName">User Name</label>
                                    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @id = "userName", @placeholder = "User Name", @required=""})
                                </div>
                                <div class="form-group">
                                    <label for="inputPassword3">Password</label>
                                    @Html.PasswordFor(x => x.PassWord, new {@class="form-control", @id="inputPassword3", @placeholder="password" ,@title="At least 6 characters with letters and numbers",@required=""})
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-success btn-lg float-right">Register</button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <!--/row-->

        </div>
        <!--/col-->
    </div>
    <!--/row-->
</div>
<!--/container-->
