@model ShopOnline.Areas.Admin.Models.LoginViewAdmin
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="breadcrumb">
    <div class="container">
        <ul class="breadcrumb"></ul>
    </div>
</div>
<div class="container login-container">
    <div class="row">
        <div class="col-md-8 login-form-1">
            <h3>Login</h3>
            @using (Html.BeginForm("Login", "Login", FormMethod.Post)) {
                <div class="form-group">
                    @Html.TextBoxFor(x => x.UserName, new { @class="form-control", @placeholder="Your User Name*" })
                </div>
                <div class="form-group">
                    @Html.PasswordFor(x=>x.PassWord, new {@class="form-control", @placeholder="Your Password *" })
                </div>
                <div class="form-group">
                    <input type="submit" class="btnSubmit" value="Login" />
                </div>
                <div class="form-group">
                    <a href="#" class="ForgetPwd">Forget Password?</a>
                </div>
                <div class="form-group">
                    <a href="/User/Create" class="ForgetPwd">Create Account?</a>
                </div>
            }
        </div>
    </div>
</div>


